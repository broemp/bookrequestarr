# OIDC Configuration
OIDC_ISSUER="http://localhost:8080/realms/bookrequestarr"
OIDC_CLIENT_ID="bookrequestarr-client"
OIDC_CLIENT_SECRET="YOUR_OIDC_CLIENT_SECRET"
OIDC_REDIRECT_URI="http://localhost:5173/api/auth/callback"
OIDC_ADMIN_GROUP="bookrequestarr_admin"

# Database
DATABASE_URL="./data/bookrequestarr.db"

# Hardcover API
HARDCOVER_API_KEY="your-hardcover-api-key"
HARDCOVER_API_URL="https://api.hardcover.app/v1/graphql"

# Notifications
DISCORD_WEBHOOK_URL=""
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# Booklore Integration (Optional)
# BOOKLORE_ENABLED=false
# BOOKLORE_BOOKDROP_PATH="/path/to/booklore/bookdrop"
# BOOKLORE_BASE_URL="http://localhost:3001"
# BOOKLORE_API_KEY=""
# BOOKLORE_VERIFY_IMPORTS=false

# Application
PUBLIC_APP_URL="http://localhost:5173"
PORT=3000
NODE_ENV=development

# Development only: Set to true to bypass authentication and auto-login as admin
# WARNING: NEVER USE IN PRODUCTION!
# DISABLE_AUTH=true
